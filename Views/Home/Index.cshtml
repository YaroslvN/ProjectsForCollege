@model List<Teacher>

<h1>Преподаватели и их проекты</h1>

@foreach (var teacher in Model)
{
    <h2>@teacher.Name</h2>
    @if (teacher.Projects != null && teacher.Projects.Any())
    {
        <ul>
        @foreach (var project in teacher.Projects)
        {
            <li>
                <a href="@Url.Action("Details", "Home", new { teacherId = teacher.Id, projectId = project.Id })">
                    @project.Name
                </a>
            </li>
        }
        </ul>
    }
    else
    {
        <p>Нет проектов.</p>
    }
}